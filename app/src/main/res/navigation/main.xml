<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/signInFragment"
    android:id="@+id/main">

    <fragment
        android:id="@+id/signInFragment"
        android:name="ru.codeoverflow.openspaceapp.ui.fragment.signin.SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="ru.codeoverflow.openspaceapp.ui.fragment.signup.SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="ru.codeoverflow.openspaceapp.ui.fragment.home.HomeFragment" />

</navigation>