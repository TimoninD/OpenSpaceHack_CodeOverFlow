<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_app</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/color_button_text</item>
        <item name="android:textSize">19sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:fontFamily">@font/graphik_medium</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="hintTextColor">@color/second_text_color</item>
        <item name="android:fontFamily">@font/graphik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textColor">@color/blue_113</item>
        <item name="android:background">@drawable/bg_edit_text_app</item>
    </style>

    <style name="BaseEditText.Phone">
        <item name="android:fontFamily">@font/druk_medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/blue_113</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="hintTextColor">@color/first_text_color</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/second_text_color</item>
        <item name="hintTextColor">@color/second_text_color</item>
        <item name="android:textAppearance">@style/TextViewH14Blue113</item>
    </style>
</resources>